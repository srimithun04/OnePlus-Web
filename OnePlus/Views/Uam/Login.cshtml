@{
    ViewData["Title"] = "Account";
    // The "Layout = null;" line has been removed to use the main _Layout.cshtml file.
}

@section Styles {
    <!-- This section injects the login page's specific stylesheet into the <head> of _Layout.cshtml -->
    <link rel="stylesheet" href="~/css/Uam/Style.css" />
}

<!-- The single sliding container -->
<div class="form-container" id="formContainer">

    <!-- TOGGLE BUTTONS (Positioned by CSS to be outside) -->
    <div class="toggle-buttons">
        <button class="toggle-btn" id="signUpBtn">&larr; Sign Up</button>
        <button class="toggle-btn" id="signInBtn">Sign In &rarr;</button>
    </div>

    <!-- LOGIN FORM WRAPPER -->
    <div class="form-wrapper login-wrapper">
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <h2>Sign In</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div style="color: green; font-size: 0.9rem; margin-bottom: 1rem;">@TempData["SuccessMessage"]</div>
            }
            <div class="form-group">
                <input type="email" placeholder="Email" name="email" required />
                <i class="icon fas fa-envelope"></i>
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" name="password" required />
                <i class="icon fas fa-lock"></i>
            </div>
            <button type="submit" class="btn-primary">Sign In</button>

            <!-- ADDED TEXT BELOW -->
            <p style="margin-top: 1.5rem; font-size: 0.9rem; color: #6c757d;">
                Don't have an account? Click the Sign Up button.
            </p>

        </form>
    </div>

    <!-- SIGN UP FORM WRAPPER -->
    <div class="form-wrapper signup-wrapper">
        <form asp-action="Signup" method="post">
            @Html.AntiForgeryToken()
            <h2>Create Account</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="text" placeholder="First Name" name="firstName" required />
                <i class="icon fas fa-user"></i>
            </div>
            <div class="form-group">
                <input type="text" placeholder="Last Name" name="lastName" required />
                <i class="icon fas fa-user"></i>
            </div>
            <div class="form-group">
                <input type="email" placeholder="Email" name="email" required />
                <i class="icon fas fa-envelope"></i>
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" name="password" required minlength="6" />
                <i class="icon fas fa-lock"></i>
            </div>
            <div class="form-group">
                <input type="password" placeholder="Confirm Password" name="confirmPassword" required />
                <i class="icon fas fa-lock"></i>
            </div>
            <button type="submit" class="btn-primary">Sign Up</button>
        </form>
    </div>

</div>

@section Scripts {
    <!-- This section injects the login page's specific script at the end of the <body> in _Layout.cshtml -->
    <script src="~/js/Uam/Script.js"></script>
}
