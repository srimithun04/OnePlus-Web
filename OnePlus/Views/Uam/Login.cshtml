@{
    ViewData["Title"] = "Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnePlus</title>
    <link rel="stylesheet" href="~/css/Uam/Style.css" />
</head>
<body>

    <!-- The single sliding container -->
    <div class="form-container" id="formContainer">

        <!-- TOGGLE BUTTONS (TOP LEFT of the container) -->
        <div class="toggle-buttons">
            <button class="toggle-btn" id="signUpBtn">Sign Up</button>
            <button class="toggle-btn" id="signInBtn">Sign In</button>
        </div>

        <!-- LOGIN FORM WRAPPER -->
        <div class="form-wrapper login-wrapper">
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <h2>Sign In</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div style="color: green; font-size: 0.9rem; margin-bottom: 1rem;">@TempData["SuccessMessage"]</div>
                }
                <div class="form-group">
                    <input type="email" placeholder="Email" name="email" required />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" name="password" required />
                </div>
                <button type="submit" class="btn-primary">Sign In</button>
            </form>
        </div>

        <!-- SIGN UP FORM WRAPPER -->
        <div class="form-wrapper signup-wrapper">
            <form asp-action="Signup" method="post">
                @Html.AntiForgeryToken()
                <h2>Create Account</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="text" placeholder="First Name" name="firstName" required />
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Last Name" name="lastName" required />
                </div>
                <div class="form-group">
                    <input type="email" placeholder="Email" name="email" required />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" name="password" required minlength="6" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Confirm Password" name="confirmPassword" required />
                </div>
                <button type="submit" class="btn-primary">Sign Up</button>
            </form>
        </div>

    </div>

    <script src="~/js/Uam/Script.js"></script>

</body>
</html>
